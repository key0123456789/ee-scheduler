= form_for @wish do |f|
  - if @wish.errors.any?
    #error_explanation
      %h2= "#{pluralize(@wish.errors.count, "error")} prohibited this wish from being saved:"
      %ul
        - @wish.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name, "イベント名"
    = f.text_field :name
  .field
    = f.label :start_time, "日付"
    = f.datetime_select :start_time, discard_hour: true
  .actions
    = f.submit 'Save'
